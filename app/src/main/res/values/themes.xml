<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NumberConverterApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/brand</item>
        <item name="colorPrimaryVariant">@color/background</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    
    <style name="edit_text_style">
        <item name="android:layout_width">284dp</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="singleLine">true</item>
    </style>


    <style name="button_style">
        <item name="android:textSize">@dimen/textButton</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@drawable/rounded_button</item>
    </style>

    
</resources>